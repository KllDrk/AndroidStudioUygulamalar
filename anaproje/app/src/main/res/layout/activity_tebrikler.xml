<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TebriklerActivity"
    android:background="@color/light_green"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:text="Tebrikler!"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Başardınız."
        android:layout_gravity="center"/>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"

    >
        <TextView
            android:id="@+id/Sure"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:hint="Süre"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/YakilanKalori"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:hint="Yakılan Kalori"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/Isim"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:hint="İsim"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/VKI"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:hint="VKI"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/SaglikDurumu"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:hint="Sağlık Durumu"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/Profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_green"
        android:text="Profil"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="parent"/>

    <Button
        android:id="@+id/AnaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_green"
        android:text="Ana Menü"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="parent"/>

</LinearLayout>